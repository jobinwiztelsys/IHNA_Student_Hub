<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#2095f2"
    >



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp" android:layout_weight="5"></LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"


    android:orientation="vertical"
    android:layout_weight="5">

    <TextView
        android:layout_width="match_parent"
android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/enter_security_pin"
        android:id="@+id/textView2" />



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="200dp"
        android:paddingRight="200dp" android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/pinbox_xml"
            android:id="@+id/login_pin_1a" />


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/pinbox_xml"
            android:id="@+id/login_pin_1b" />
        <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
            android:layout_margin="10dp"
        android:layout_height="match_parent"
            android:background="@drawable/pinbox_xml"
        android:id="@+id/login_pin_1c" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/pinbox_xml"
            android:id="@+id/login_pin_1d" />


    </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="7"
        android:paddingLeft="200dp"
        android:paddingRight="200dp"
        android:orientation="vertical"
        android:background="#2095f2">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:background="#2095f2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/register_pin_img_btn_1" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#2095f2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/register_pin_img_btn_2" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#2095f2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/register_pin_img_btn_3" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:background="#2095f2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/register_pin_img_btn_4" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#2095f2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/register_pin_img_btn_5" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#2095f2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/register_pin_img_btn_6" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">


            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:background="#2095f2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/register_pin_img_btn_7" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#2095f2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/register_pin_img_btn_8" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#2095f2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/register_pin_img_btn_9" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:background="#2095f2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_height="match_parent"
                android:text="OK"
                android:id="@+id/register_pin_img_btn_ok" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:background="#2095f2"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/register_pin_img_btn_0" />
            <ImageButton
                android:layout_width="0dp"
                android:elevation="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/register_pin_img_btn_erase"
                android:background="#2095f2"
                android:src="@drawable/keypad_erase"
                android:layout_weight="1" />

        </LinearLayout>

</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#FFFFFF"
        android:text="@string/Forgot_pin"
        android:id="@+id/button"
        android:background="#2095f2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />


</LinearLayout>
