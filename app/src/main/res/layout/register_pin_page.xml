<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/registerpinHeading"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/create_Secuity_pin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/registerpin_container"
        android:layout_width="match_parent"
        android:layout_below="@id/registerpinHeading"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/registerpin_pinlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/centerReference"
            android:background="@color/darkblue">




            <TextView
                android:id="@+id/entersecurityTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/register_pinlayout_1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"

                android:text="Enter Securty Pin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/register_pinlayout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/confirmsecurityTV"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/register_pin_1a"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/pinbox_xml" />


                <ImageButton
                    android:id="@+id/register_pin_1b"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/pinbox_xml" />

                <ImageButton
                    android:id="@+id/register_pin_1c"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/pinbox_xml" />

                <ImageButton
                    android:id="@+id/register_pin_1d"


                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/pinbox_xml" />

            </LinearLayout>


            <TextView
                android:id="@+id/confirmsecurityTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/register_pinlayout_2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"

                android:text="Confirm Security Pin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/register_pinlayout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/register_pin_2a"


                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/pinbox_xml" />


                <ImageButton
                    android:id="@+id/register_pin_2b"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/pinbox_xml" />

                <ImageButton
                    android:id="@+id/register_pin_2c"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/pinbox_xml" />

                <ImageButton
                    android:id="@+id/register_pin_2d"


                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/pinbox_xml" />

            </LinearLayout>


        </RelativeLayout>

        <View
            android:id="@+id/centerReference"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"


            android:visibility="invisible" />


        <LinearLayout
            android:id="@+id/pin_login_dialpad_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/centerReference"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@color/white"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/register_pin_img_btn_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/register_pin_img_btn_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="2"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/register_pin_img_btn_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="3"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="1dp"
                android:paddingTop="1dp">

                <Button
                    android:id="@+id/register_pin_img_btn_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="4"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/register_pin_img_btn_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="5"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/register_pin_img_btn_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="6"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/register_pin_img_btn_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="7"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/register_pin_img_btn_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="8"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/register_pin_img_btn_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="9"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="1dp">

                <Button
                    android:id="@+id/register_pin_img_btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="OK"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/register_pin_img_btn_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/register_pin_img_btn_erase"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="12"
                    android:textColor="@color/transparent"
                    android:background="@drawable/keypad_erace"
                    android:elevation="2dp"
                     />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pbHeaderProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"

        android:layout_gravity="center"
        >
    </ProgressBar>

</RelativeLayout>