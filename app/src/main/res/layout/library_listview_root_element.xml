<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="150dp"
    android:layout_height="150dp"
    android:paddingBottom="2dp"
    android:layout_margin="10dp"
    android:background="@drawable/library_icon_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:id="@+id/library_listview_icon_imageview" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="0dp" android:layout_weight="1" android:background="#afb644">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/library_listview_icon_nameTV" />
    </LinearLayout>


</LinearLayout>