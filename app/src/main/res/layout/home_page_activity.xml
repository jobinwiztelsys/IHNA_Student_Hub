<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:id="@+id/home_parent_layout"
    android:layout_height="match_parent"
    >
        <LinearLayout
        android:id="@+id/home_inner_container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/profile_top_layout_bg"
                android:layout_weight="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:textColor="@color/greenTextcolour"
                    android:id="@+id/home_page_username1"
                  android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6">

 <LinearLayout
     android:layout_alignParentTop="true"
     android:layout_width="match_parent"
     android:orientation="horizontal"
     android:padding="10dp"
     android:layout_height="wrap_content"
     android:id="@+id/home_page_titleLayout">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:text="@string/Title"
         android:id="@+id/textView1"
         android:layout_below="@+id/linearLayout"
         android:layout_weight="1"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:text=""
         android:layout_weight="3"
         android:id="@+id/Profile_page_titleTV"
         android:layout_below="@+id/linearLayout"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
        />

 </LinearLayout>

                <View
                    android:id="@+id/viewline1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home_page_titleLayout"
                    android:layout_marginBottom="15dp"

                    android:background="@android:color/darker_gray" />


                <LinearLayout
                    android:layout_below="@id/viewline1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_page_firstnamelayout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/firstname"
                        android:id="@+id/textView2"
                        android:layout_below="@+id/linearLayout"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:layout_weight="3"
                        android:id="@+id/Profile_page_first_nametv"
                        android:layout_below="@+id/linearLayout"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />

                </LinearLayout>

                <View
                    android:id="@+id/viewline2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home_page_firstnamelayout"
                    android:layout_marginBottom="15dp"

                    android:background="@android:color/darker_gray" />



                <LinearLayout
                    android:layout_below="@id/viewline2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_page_lastnamelayout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/lastname"
                        android:id="@+id/textView3"
                        android:layout_below="@+id/linearLayout"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:layout_weight="3"
                        android:id="@+id/Profile_page_last_nametv"
                        android:layout_below="@+id/linearLayout"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />

                </LinearLayout>

                <View
                    android:id="@+id/viewline3"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home_page_lastnamelayout"
                    android:layout_marginBottom="15dp"

                    android:background="@android:color/darker_gray" />





                <LinearLayout
                    android:layout_below="@id/viewline3"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_page_user_namelayout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/lastname"
                        android:id="@+id/textView4"
                        android:layout_below="@+id/linearLayout"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:layout_weight="3"
                        android:id="@+id/Profile_page_user_nametv"
                        android:layout_below="@+id/linearLayout"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />

                </LinearLayout>

                <View
                    android:id="@+id/viewline4"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/home_page_user_namelayout"
                    android:layout_marginBottom="15dp"

                    android:background="@android:color/darker_gray" />

            </RelativeLayout>

        </LinearLayout>

</RelativeLayout>
